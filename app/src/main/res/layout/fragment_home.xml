<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_white_hex_1"
    tools:context=".fragment.HomeFragment"
    android:padding="4dp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<com.github.abdularis.civ.CircleImageView
    android:id="@+id/user_profile_imageView"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/female_pro"
    android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_below="@+id/user_profile_imageView"
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp">


          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:cardCornerRadius="8dp"
              app:cardElevation="4dp"
              app:cardMaxElevation="8dp"
              app:cardUseCompatPadding="true"
              app:cardBackgroundColor="@color/AppLight">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="16dp">

                  <TextView
                      android:id="@+id/current_location_tv"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Current Location : ... "
                      android:textSize="14sp"/>


              </LinearLayout>
          </android.support.v7.widget.CardView>

        </LinearLayout>


        <com.subsub.library.BeautyButton
            android:id="@+id/connect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_30dp_green"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="connect "
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            app:shadowColor="@color/colorBlack"
            app:shadowPercentHeight="0.7"
            app:shadowPercentWidth="0.6"
            app:shadowRadius="30dp"
            app:shadowYOffset="10"

            android:layout_alignParentEnd="true"/>



       <LinearLayout
           android:layout_below="@id/linearLayout1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="16dp">

           <com.subsub.library.BeautyButton
               android:id="@+id/send_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/bg_round_30dp_blue"
               android:elevation="10dp"
               android:padding="10dp"
               android:text="Send Message"
               android:textColor="@color/colorBlack"
               app:shadowColor="@color/colorBlack"
               app:shadowPercentHeight="0.7"
               app:shadowPercentWidth="0.6"
               app:shadowRadius="30dp"
               app:shadowYOffset="10" />


           <com.subsub.library.BeautyButton
               android:id="@+id/start_track_location_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/bg_round_30dp_primary"
               android:elevation="10dp"
               android:padding="10dp"
               android:text="Location track"
               android:textColor="@color/colorWhite"
               app:shadowColor="@color/colorBlack"
               app:shadowPercentHeight="0.7"
               app:shadowPercentWidth="0.6"
               app:shadowRadius="30dp"
               app:shadowYOffset="10" />

           <com.subsub.library.BeautyButton
               android:id="@+id/stop_track_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/bg_round_30dp_primary"
               android:elevation="10dp"
               android:padding="10dp"
               android:text="Stop tracking"
               android:textColor="@color/colorWhite"
               app:shadowColor="@color/primaryLightColor"
               app:shadowPercentHeight="0.7"
               app:shadowPercentWidth="0.6"
               app:shadowRadius="30dp"
               app:shadowYOffset="10"
               android:visibility="invisible"/>

       </LinearLayout>

    </RelativeLayout>

</FrameLayout>